{
  "name": "@arena/workspace-server",
  "version": "0.1.0",
  "description": "A workspace server for Arena runtime",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "pnpm bundle --minify",
    "dev": "pnpm bundle --watch",
    "bundle": "pnpm esbuild index=./src/index.ts --external:path --external:process --external:@arena/babel --external:@arena/rollup --outdir=dist --format=esm --bundle"
  },
  "author": "Sagar Poudel",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@arena/core": "workspace:^0.1.0",
    "@arena/runtime": "workspace:^0.1.0",
    "mime": "^3.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/mime": "^3.0.1",
    "esbuild": "^0.17.10"
  }
}
