{
  "name": "@arena/workspace-server",
  "version": "0.1.0",
  "description": "A workspace server for Arena runtime",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "build": "pnpm bundle:server && pnpm bundle:builder",
    "bundle:server": "pnpm esbuild server=./src/server.ts --external:path --external:process --external:@arena/runtime/babel --external:@arena/runtime/transpiler --external:@arena/runtime/server --outdir=dist --format=esm --bundle",
    "bundle:builder": "pnpm esbuild builder=./src/builder/index.ts --external:path --external:process --external:@arena/runtime/babel --external:@arena/runtime/rollup --outdir=dist --format=esm --bundle"
  },
  "author": "Sagar Poudel",
  "private": true,
  "license": "UNLICENSED",
  "dependencies": {
    "@arena/core": "workspace:^0.1.0",
    "@arena/runtime": "workspace:^0.1.0",
    "mime": "^3.0.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/mime": "^3.0.1",
    "esbuild": "^0.17.10"
  }
}
