{
  "name": "@portal/workspace-cluster",
  "version": "0.1.8",
  "description": "Workspace cluster API server",
  "scripts": {
    "build": "bun run node_modules/@portal/cli/bin/cli.ts app bundle"
  },
  "keywords": [],
  "author": "Sagar Poudel",
  "private": true,
  "arena": {
    "server": {
      "entry": "entry-server-dev.tsx"
    },
    "javascript": {
      "resolve": {
        "alias": {
          "~/app": "./app",
          "~/api": "./api",
          "@portal/server/plugins/resolver": "@arena/runtime/resolver",
          "@portal/server/plugins/transpiler": "@arena/runtime/transpiler",
          "pg": "@arena/runtime/postgres"
        },
        "dedupe": [
          "solid-js",
          "@solidjs/router",
          "@solidjs/meta",
          "@arena/core",
          "@portal/solid-store",
          "@solidjs/router",
          "@portal/solid-router",
          "@kobalte/core",
          "postcss",
          "tailwindcss"
        ],
        "conditions": [
          "solid",
          "server",
          "deno",
          "node"
        ]
      }
    }
  },
  "dependencies": {
    "@arena/cloud": "workspace:^",
    "@arena/runtime": "workspace:^",
    "@kobalte/core": "^0.12.1",
    "@portal-apps/assistant": "workspace:^",
    "@portal-apps/drive": "workspace:^",
    "@portal/cli": "workspace:^",
    "@portal/deploy": "workspace:^",
    "@portal/email": "workspace:^",
    "@portal/sdk": "workspace:^",
    "@portal/server-core": "workspace:^",
    "@portal/solid-dnd": "workspace:^",
    "@portal/solid-query": "workspace:^",
    "@portal/solid-router": "workspace:^",
    "@portal/solid-store": "workspace:^",
    "@portal/solid-ui": "workspace:^",
    "@portal/solidjs": "workspace:^",
    "@portal/workspace": "workspace:^",
    "@portal/workspace-sdk": "workspace:^",
    "@sindresorhus/slugify": "^2.2.1",
    "@solidjs/meta": "^0.29.3",
    "@solidjs/router": "^0.10.5",
    "@t3-oss/env-core": "^0.8.0",
    "autoprefixer": "^10.4.14",
    "dedent": "^1.5.1",
    "drizzle-orm": "^0.26.4",
    "ky": "^0.33.3",
    "lodash-es": "^4.17.21",
    "mime": "^4.0.1",
    "mime-types": "^2.1.35",
    "ms": "^2.1.3",
    "path-to-regexp": "^6.2.1",
    "solid-js": "^1.8.7",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@portal/server-dev": "workspace:^",
    "@types/lodash-es": "^4.17.12",
    "@types/mime-types": "^2.1.4",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.10.6",
    "tailwindcss": "^3.4.1"
  }
}
